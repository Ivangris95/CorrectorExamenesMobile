<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/universaeColor">

    <!-- Header con logo y título -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingTop="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="0.15"
            android:contentDescription="@string/descriptionImageLogo"
            android:src="@drawable/logo"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/tittle"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="0.6"
            android:fontFamily="@font/raleway_medium"
            android:gravity="center"
            android:text="@string/app_name"
            android:textAlignment="center"
            android:textAppearance="@android:style/TextAppearance.Material.Body1"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:typeface="serif"
            android:visibility="visible" />
    </LinearLayout>

    <!-- Contenedor de imagen central -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/imgView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/descriptionImagePlantilla"
            android:padding="30dp"
            android:scaleType="fitCenter"
            android:src="@drawable/plantilla" />
    </FrameLayout>

    <!-- Contenedor de botones -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingBottom="25dp"
        android:paddingTop="16dp">

        <Button
            android:id="@+id/platillaButton"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button_background_selector"
            android:fontFamily="@font/raleway_extrabold"
            android:text="@string/plantillaString"
            android:textColor="@drawable/text_color"
            android:layout_marginBottom="10dp"
            android:visibility="visible"/>

        <!-- Botones Galería y Foto (Primera fila) -->
        <LinearLayout
            style="?android:attr/buttonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="20dp">

            <Button
                android:id="@+id/galeriaButton"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:visibility="gone"
                android:background="@drawable/rounded_button_background_selector"
                android:fontFamily="@font/raleway_extrabold"
                android:textColor="@drawable/text_color"
                android:text="@string/galeriaString"/>

            <Button
                android:id="@+id/fotoButton"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:background="@drawable/rounded_button_background_selector"
                android:fontFamily="@font/raleway_extrabold"
                android:textColor="@drawable/text_color"
                android:text="@string/camaraString"/>
        </LinearLayout>

        <Button
            android:id="@+id/examenButton"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button_background_selector"
            android:fontFamily="@font/raleway_extrabold"
            android:text="@string/examenString"
            android:textColor="@drawable/text_color"
            android:layout_marginBottom="10dp"/>

        <!-- Botones Galería y Foto (Segunda fila) -->
        <LinearLayout
            style="?android:attr/buttonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="20dp">

            <Button
                android:id="@+id/galeriaButton2"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:visibility="gone"
                android:background="@drawable/rounded_button_background_selector"
                android:fontFamily="@font/raleway_extrabold"
                android:textColor="@drawable/text_color"
                android:text="@string/galeriaString"/>

            <Button
                android:id="@+id/fotoButton2"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:background="@drawable/rounded_button_background_selector"
                android:fontFamily="@font/raleway_extrabold"
                android:textColor="@drawable/text_color"
                android:text="@string/camaraString"/>
        </LinearLayout>

        <Button
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button_background_selector"
            android:fontFamily="@font/raleway_extrabold"
            android:text="@string/corregirString"
            android:textColor="@drawable/text_color"/>

    </LinearLayout>

</LinearLayout>